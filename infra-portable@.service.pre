[Unit]
Description=OpenVSwtich virtual daemons
Documentation=https://github.com/fono09/infra_portale
After=infra-portable-openvswitch.service docker.service
Requires=infra-portable-openvswitch.service docker.service

[Service]
ExecStart=/bin/bash -c "$BASE_DIR/%i/start_stop.sh start"
ExecStop=/bin/bash -c "$BASE_DIR/%i/start_stop.sh stop"
Type=oneshot
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
