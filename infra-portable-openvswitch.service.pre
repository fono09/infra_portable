[Unit]
Description=infra_portable main bridge
Documentation=https://github.com/fono09/infra_portale
After=openvswitch-switch.service

[Service]
ExecStart=$BASE_DIR/openvswitch/start_stop.sh start
ExecStop=$BASE_DIR/openvswitch/start_stop.sh stop
Type=oneshot
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
